# Database - Development
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=goldengate
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20

# Database - Test
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5433
TEST_DATABASE_NAME=goldengate_test
TEST_DATABASE_USER=postgres
TEST_DATABASE_PASSWORD=postgres

# Application
PORT=3001
NODE_ENV=development
API_VERSION=v1
BASE_URL=http://localhost:3001

# JWT & OAuth
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
OAUTH_ISSUER=http://localhost:3001

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Agent Taskflow Integration
ATF_API_URL=https://api.agenttaskflow.com
ATF_API_KEY=your-atf-api-key

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# MCP Server
MCP_SERVER_PORT=3002

# Snowflake Configuration
# Account identifier (e.g., xy12345.us-east-1)
SNOWFLAKE_ACCOUNT=
# Snowflake username
SNOWFLAKE_USERNAME=
# Snowflake password
SNOWFLAKE_PASSWORD=
# Default database to connect to
SNOWFLAKE_DATABASE=
# Default warehouse to use for queries
SNOWFLAKE_WAREHOUSE=
# Default schema (defaults to PUBLIC)
SNOWFLAKE_SCHEMA=PUBLIC
# Optional: Snowflake role to use
SNOWFLAKE_ROLE=
# Query timeout in milliseconds (default: 60000)
SNOWFLAKE_TIMEOUT=60000
# Maximum rows to return per query (default: 10000)
SNOWFLAKE_MAX_ROWS=10000